<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/photo_vine_2">

    <TextView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Оплата"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Выберите способ оплаты"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/visa_l"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/mbank_logo"
            android:layout_margin="10dp"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/o_logo"
            android:layout_margin="10dp"/>


    </LinearLayout>

    <RadioGroup
        android:id="@+id/payment_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/visa_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Visa"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#95FFFFFF" />

        <RadioButton
            android:id="@+id/mbank_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="M Bank"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#95FFFFFF"
            android:layout_marginTop="10dp" />
        <RadioButton
            android:id="@+id/o_option"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="O Bank"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:background="#95FFFFFF"
            android:layout_marginTop="10dp" />
    </RadioGroup>



    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите адрес доставки"
        android:textColorHint="@color/black"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:background="#95FFFFFF"/>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Оплатить"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="#4E0A0A"/>
</LinearLayout>
