<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/photo_vine_4"
    tools:context=".Users.MainActivity">

    <TextView
        android:layout_width="450dp"
        android:layout_height="80dp"
        android:text=" Dream Wine "
        android:layout_marginTop="50dp"
        android:textSize="70dp"
        android:textColor="#7E1515"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/main_login_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#7A1010"
        android:layout_marginTop="140dp"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Войти"
        android:textSize="22dp"



        />

    <Button
        android:id="@+id/main_join_button"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:backgroundTint="#390707"
       android:layout_marginTop="210dp"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Регистрация"
        android:textSize="22dp"

        />



</RelativeLayout>